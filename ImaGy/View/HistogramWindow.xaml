<Window x:Class="ImaGy.View.HistogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImaGy.View"
        xmlns:vm="clr-namespace:ImaGy.ViewModels"
        mc:Ignorable="d"
        Title="Histogram" Height="400" Width="600"
        d:DataContext="{d:DesignInstance Type=vm:HistogramViewModel, IsDesignTimeCreatable=True}">

    <Grid Background="{StaticResource WindowBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Y Axis Labels -->
        <Grid Grid.Row="0" Grid.Column="0" Name="YAxisLabelsPanel" VerticalAlignment="Stretch" Margin="15,10,5,0"/>

        <!-- Histogram Canvas -->
        <Canvas Grid.Row="0" Grid.Column="1" Name="HistogramCanvas" Background="{StaticResource PrimaryGrayBrush}" Margin="0,10,0,0" SizeChanged="HistogramCanvas_SizeChanged"/>

        <!-- X Axis Labels -->
        <StackPanel Grid.Row="1" Grid.Column="1" Name="XAxisLabelsPanel" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,10,10"/>

        <!-- Statistics Panel -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" BorderBrush="{StaticResource PrimaryGrayBrush}" BorderThickness="1" Margin="10" Padding="10" MinWidth="160">
            <StackPanel>
                <TextBlock Text="Summary Statistics" FontWeight="Bold" Margin="0,0,0,10"  Foreground="White" TextAlignment="Center"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Mean:" Margin="0,2,5,2" Foreground="White"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Mean, StringFormat={}{0:F2}, FallbackValue='N/A'}" HorizontalAlignment="Right" Margin="0,2" Foreground="White"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Std Dev:" Margin="0,2,5,2" Foreground="White"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Std, StringFormat={}{0:F2}, FallbackValue='N/A'}" HorizontalAlignment="Right" Margin="0,2"  Foreground="White"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Median:" Margin="0,2,5,2"  Foreground="White"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Median, FallbackValue='N/A'}" HorizontalAlignment="Right" Margin="0,2" Foreground="White"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Mode:" Margin="0,2,5,2"  Foreground="White"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Mode, FallbackValue='N/A'}" HorizontalAlignment="Right" Margin="0,2"  Foreground="White"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Min:" Margin="0,2,5,2" Foreground="White"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Min, FallbackValue='N/A'}" HorizontalAlignment="Right" Margin="0,2"  Foreground="White"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Max:" Margin="0,2,5,2"  Foreground="White"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Max, FallbackValue='N/A'}" HorizontalAlignment="Right" Margin="0,2"  Foreground="White"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Range:" Margin="0,2,5,2"  Foreground="White"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Range, FallbackValue='N/A'}" HorizontalAlignment="Right" Margin="0,2" Foreground="White"/>
                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</Window>