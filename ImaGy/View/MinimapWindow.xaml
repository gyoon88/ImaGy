<Window x:Class="ImaGy.View.MinimapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Minimap"
        Width="300"
        Height="300"
        Closed="MinimapWindow_Closed">
    <Canvas x:Name="MinimapCanvas" SizeChanged="MinimapCanvas_SizeChanged">
        <Image x:Name="MinimapImage" Source="{Binding MainImage}" Stretch="Uniform"
               Width="{Binding ActualWidth, ElementName=MinimapCanvas}"
               Height="{Binding ActualHeight, ElementName=MinimapCanvas}"/>

        <Rectangle Fill="#80FF0000" Stroke="Red" StrokeThickness="1"
                   Canvas.Left="{Binding ScaledViewportX}"
                   Canvas.Top="{Binding ScaledViewportY}"
                   Width="{Binding ScaledViewportWidth}"
                   Height="{Binding ScaledViewportHeight}" />
    </Canvas>
</Window>