<Window x:Class="ImaGy.View.MinimapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Minimap"
        Width="300"
        Height="300">
    <Grid>
        <Image x:Name="MinimapImage" Source="{Binding MainImage}" Stretch="Uniform" />
        <Border BorderBrush="Red" BorderThickness="2"
                Canvas.Left="{Binding ViewportX}"
                Canvas.Top="{Binding ViewportY}"
                Width="{Binding ViewportWidth}"
                Height="{Binding ViewportHeight}" />
    </Grid>
</Window>