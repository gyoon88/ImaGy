<Window x:Class="ImaGy.View.MinimapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        Title="Minimap"
        Width="300"
        Height="300">
    <Canvas>
        <b:Interaction.Triggers>
            <b:EventTrigger EventName="SizeChanged">
                <b:ChangePropertyAction TargetObject="{Binding}" PropertyName="MinimapActualWidth" Value="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
                <b:ChangePropertyAction TargetObject="{Binding}" PropertyName="MinimapActualHeight" Value="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
            </b:EventTrigger>
        </b:Interaction.Triggers>
        
        <Image x:Name="MinimapImage" Source="{Binding MainImage}" Stretch="Uniform"
               Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
               Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
        <Border BorderBrush="Red" BorderThickness="2"
                Canvas.Left="{Binding ScaledViewportX}"
                Canvas.Top="{Binding ScaledViewportY}"
                Width="{Binding ScaledViewportWidth}"
                Height="{Binding ScaledViewportHeight}" />
    </Canvas>
</Window>